{
  "extends": [
    "airbnb",
    "airbnb/hooks",
    "eslint:recommended",
    "plugin:import/errors",
    "plugin:react/recommended",
    "prettier"
  ],
  "rules": {
    "react/prop-types": 0,
    "no-console": 1,
    "react-hooks/rules-of-hooks": 2,
    "react-hooks/exhaustive-deps": 1,
    "linebreak-style": 0,
    "quotes": 0,
    "no-nested-ternary": 0,
    "react/jsx-filename-extension": [1, { "extensions": [".js"] }],
    "react/function-component-definition": [
      0,
      { "namedComponents": "function-expression" }
    ]
  },
  "plugins": ["react", "import", "react-hooks"],
  "parserOptions": {
    "requireConfigFile": false,
    "ecmaVersion": 2021,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "es6": true,
    "browser": true, //no error on document, settimeout etc
    "node": true
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
